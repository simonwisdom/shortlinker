{
  "manifest_version": 3,
  "name": "Shortlinker",
  "version": "1.0",
  "description": "Generate a one-sentence summary of the current page with an embedded link.",
  "permissions": ["activeTab", "storage", "scripting", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}